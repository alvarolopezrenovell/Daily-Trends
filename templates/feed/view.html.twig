{% extends 'base.html.twig' %}

{% block body %}
  <div class="container">
    <h1>{{ feed.title }}</h1>

    <img class="mt-5 mb-5" src="{{ feed.image }}" alt="{{ feed.title }}">

    <section class="mb-5">
      {{ feed.body | nl2br | raw  }}
    </section>

    <p class="mb-5">
      <i class="far fa-clock fz-12"></i>
      {{ feed.getPublishedAtTxt() }} <br>
      <i class="fas fa-user fz-12"></i>
      <span class="text-capitalize">{{ feed.publisher|lower }}</span> <br>
      <i class="fas fa-link fz-12"></i>
      <a href="{{ feed.source }}" target="_blank">Link to source</a>
    </p>

    <a href="{{ path('feed_edit', {id: feed.id}) }}" class="btn-primary btn"><i class="fas fa-edit"></i> Edit</a>
    <a href="{{ path('feed_delete', {id: feed.id}) }}" class="btn-danger btn" data-toggle="modal" data-target="#deleteModal"><i class="fas fa-trash"></i> Delete</a>

  </div>

  <!-- Modal -->
  <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteModalLabel">Warning</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">Are you sure?</div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-danger btn_accept">Delete</button>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
